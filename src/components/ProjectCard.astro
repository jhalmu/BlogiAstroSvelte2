---
interface Props {
  name: string
  description: string
  url: string
  homepage?: string
  language?: string
  stars: number
  forks: number
  updatedAt: string
  image?: string | null
  tags?: string[]
}

const {
  name,
  description,
  url,
  homepage,
  language,
  stars,
  forks,
  updatedAt,
  image,
  tags = []
} = Astro.props

const formattedDate = new Date(updatedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
})
---

<article 
  class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300"
  aria-labelledby={`project-${name.toLowerCase().replace(/\s+/g, '-')}`}
>
  {image ? (
    <div class="relative h-48 overflow-hidden">
      <img
        src={image}
        alt={`Screenshot of ${name} project`}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  ) : (
    <div 
      class="bg-gradient-to-br from-blue-500 to-purple-600 h-48 p-6 flex flex-col justify-center"
      role="presentation"
    >
      <h3 
        id={`project-${name.toLowerCase().replace(/\s+/g, '-')}`}
        class="text-2xl font-bold text-white mb-4"
      >
        {name}
      </h3>
      {tags.length > 0 && (
        <div 
          class="flex flex-wrap gap-2"
          role="list"
          aria-label="Project technologies"
        >
          {tags.map(tag => (
            <span 
              class="px-2 py-1 bg-white/20 rounded-full text-sm text-white"
              role="listitem"
            >
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  )}

  <div class="p-6">
    {image && (
      <h3 
        id={`project-${name.toLowerCase().replace(/\s+/g, '-')}`}
        class="text-xl font-bold mb-2"
      >
        {name}
      </h3>
    )}
    <p class="text-gray-600 mb-4 line-clamp-2">{description}</p>

    <div 
      class="flex flex-wrap gap-4 text-sm text-gray-500 mb-4"
      aria-label="Project statistics"
    >
      {language && (
        <div class="flex items-center gap-1" aria-label={`Written in ${language}`}>
          <span 
            class="w-3 h-3 rounded-full bg-blue-500"
            role="presentation"
            aria-hidden="true"
          ></span>
          {language}
        </div>
      )}
      <div class="flex items-center gap-1" aria-label={`${stars} stars`}>
        <svg 
          class="w-4 h-4" 
          fill="currentColor" 
          viewBox="0 0 16 16"
          aria-hidden="true"
        >
          <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.75.75 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25z"/>
        </svg>
        {stars}
      </div>
      <div class="flex items-center gap-1" aria-label={`${forks} forks`}>
        <svg 
          class="w-4 h-4" 
          fill="currentColor" 
          viewBox="0 0 16 16"
          aria-hidden="true"
        >
          <path d="M5 5.372v.878c0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75v-.878a2.25 2.25 0 1 1 1.5 0v.878a2.25 2.25 0 0 1-2.25 2.25h-1.5v2.128a2.251 2.251 0 1 1-1.5 0V8.5h-1.5A2.25 2.25 0 0 1 3.5 6.25v-.878a2.25 2.25 0 1 1 1.5 0ZM5 3.25a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Zm6.75.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm-3 8.75a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Z"/>
        </svg>
        {forks}
      </div>
      <div class="flex items-center gap-1" aria-label={`Last updated ${formattedDate}`}>
        <svg 
          class="w-4 h-4" 
          fill="currentColor" 
          viewBox="0 0 16 16"
          aria-hidden="true"
        >
          <path d="M1.5 8a6.5 6.5 0 1 1 13 0 6.5 6.5 0 0 1-13 0ZM8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0ZM6.379 5.227A.25.25 0 0 0 6 5.442v5.117a.25.25 0 0 0 .379.214l4.264-2.559a.25.25 0 0 0 0-.428L6.379 5.227Z"/>
        </svg>
        <span>{formattedDate}</span>
      </div>
    </div>

    <div 
      class="flex gap-4"
      aria-label="Project links"
    >
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="flex-1 text-center px-4 py-2 bg-gray-900 text-white rounded-md hover:bg-gray-800 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900"
        aria-label={`View ${name} repository on GitHub`}
      >
        View Repository
      </a>
      {homepage && (
        <a
          href={homepage}
          target="_blank"
          rel="noopener noreferrer"
          class="flex-1 text-center px-4 py-2 border border-gray-900 text-gray-900 rounded-md hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900"
          aria-label={`View live demo of ${name}`}
        >
          Live Demo
        </a>
      )}
    </div>
  </div>
</article>
