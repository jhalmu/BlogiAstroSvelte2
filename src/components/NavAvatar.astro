---
interface Props {
  src?: string
  alt?: string
}

const { src = '/avatar.jpg', alt = "Blog author's profile picture" } =
  Astro.props
---

<div class='nav-avatar-wrapper'>
  <div class="avatar-tint">
    <img
      src={src}
      alt={alt}
      class='w-28 h-28 rounded-full object-cover transition-all duration-300 nav-avatar'
      loading='eager'
      decoding='async'
      width='112'
      height='112'
    />
    <div class="color-overlay"></div>
  </div>
</div>

<style>
  .nav-avatar-wrapper {
    position: relative;
    display: inline-block;
    opacity: 0.7;
  }

  .avatar-tint {
    position: relative;
    border-radius: 50%;
    background-color: rgba(147, 51, 234, 0.35);
    &::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: 50%;
      background: linear-gradient(
        135deg,
        rgba(147, 51, 234, 0.4),
        rgba(168, 85, 247, 0.2)
      );
      z-index: 1;
    }
  }

  .nav-avatar {
    position: relative;
    z-index: 2;
    border: 2px solid rgba(147, 51, 234, 0.3);
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06),
      0 0 0 2px rgba(147, 51, 234, 0.1);
    filter: contrast(1.1) saturate(1.2) brightness(1.1);
    transform: translateZ(0);
    mix-blend-mode: soft-light;
  }

  .color-overlay {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: rgba(147, 51, 234, 0.2);
    mix-blend-mode: color;
    pointer-events: none;
  }

  .nav-avatar-wrapper:hover .nav-avatar {
    border-color: rgba(147, 51, 234, 0.4);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05),
      0 0 0 4px rgba(147, 51, 234, 0.2);
    transform: translateY(-2px);
  }

  .nav-avatar::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: linear-gradient(
      45deg,
      rgba(147, 51, 234, 0.3) 0%,
      transparent 60%
    );
    pointer-events: none;
  }
</style>
