---
const currentYear = new Date().getFullYear();
---

<footer class="h-24 relative mt-auto">
  <!-- Mountain background -->
  <div class="absolute inset-0 bg-no-repeat bg-top bg-cover" style="background-image: url('/mountains-footer.svg')"></div>
  
  <!-- Footer content -->
  <div class="relative z-10 flex justify-between items-center h-full px-4">
    <div class="w-full text-center text-purple-900">
      <div class="flex justify-center items-center space-x-6 mb-3">
        <!-- BlueSky -->
        <a 
          href="https://bsky.app" 
          class="hover:text-purple-700 transition-colors duration-300" 
          aria-label="Follow me on BlueSky"
          title="Follow me on BlueSky"
          rel="me noopener noreferrer"
          target="_blank"
        >
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" role="img">
            <path d="M12.002 0C5.373 0 0 5.373 0 12c0 6.628 5.373 12 12.002 12 6.628 0 12-5.372 12-12 0-6.627-5.372-12-12-12zm-.685 18.884c-.576.456-1.79.888-3.112.888-1.32 0-2.534-.432-3.111-.888-.216-.168-.216-.48 0-.648.216-.168.576-.168.792 0 .432.336 1.44.72 2.319.72.888 0 1.896-.384 2.328-.72.216-.168.576-.168.792 0 .216.168.216.48-.008.648zm5.736-3.504c-.216.408-.672.648-1.128.648-.456 0-.912-.24-1.128-.648l-2.184-4.128-2.184 4.128c-.216.408-.672.648-1.128.648-.456 0-.912-.24-1.128-.648L5.037 9.276c-.12-.216-.024-.48.216-.576.24-.096.504-.024.6.192l3.144 6.024 2.184-4.128c.216-.408.672-.648 1.128-.648.456 0 .912.24 1.128.648l2.184 4.128 3.144-6.024c.096-.216.36-.288.6-.192.24.096.336.36.216.576l-3.144 6.104z"/>
          </svg>
        </a>
        
        <!-- LinkedIn -->
        <a 
          href="https://linkedin.com" 
          class="hover:text-purple-700 transition-colors duration-300" 
          aria-label="Connect with me on LinkedIn"
          title="Connect with me on LinkedIn"
          rel="me noopener noreferrer"
          target="_blank"
        >
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" role="img">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        
        <!-- GitHub -->
        <a 
          href="https://github.com" 
          class="hover:text-purple-700 transition-colors duration-300" 
          aria-label="View my projects on GitHub"
          title="View my projects on GitHub"
          rel="me noopener noreferrer"
          target="_blank"
        >
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" role="img">
            <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
          </svg>
        </a>
        
        <!-- RSS -->
        <a 
          href="/rss.xml" 
          class="hover:text-purple-700 transition-colors duration-300" 
          aria-label="Subscribe to RSS feed"
          title="Subscribe to RSS feed"
          rel="alternate"
          type="application/rss+xml"
        >
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" role="img">
            <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
          </svg>
        </a>
      </div>
      
      <div class="text-sm space-y-1">
        <p>&copy; {currentYear} My Blog. All rights reserved.</p>
        <p class="text-xs text-purple-700">
          Photos provided by 
          <a 
            href="https://www.pexels.com" 
            class="underline hover:text-purple-900 transition-colors duration-300"
            target="_blank"
            rel="noopener noreferrer"
          >
            Pexels
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
