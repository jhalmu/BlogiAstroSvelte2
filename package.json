{
  "name": "blogi-astro-svelte",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "predev": "node scripts/preload-images.mjs",
    "dev": "astro dev",
    "start": "astro dev",
    "prebuild": "node scripts/preload-images.mjs",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "validate": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node scripts/validate.ts validate",
    "test": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node scripts/validate.ts test",
    "validate:all": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node scripts/validate.ts all",
    "setup:tools": "bash scripts/setup-tools.sh",
    "setup:node": "bash scripts/setup-node.sh",
    "db:migrate:check": "knex migrate:list",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --config .markdownlint.json"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-component": "^1.0.5",
    "@astrojs/node": "^9.0.0",
    "@astrojs/rss": "^4.0.10",
    "@astrojs/tailwind": "^5.1.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^6.4.17",
    "astro": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "marked": "^15.0.4",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "rate-limiter-flexible": "^5.0.4",
    "redis": "^4.7.0",
    "sanitize-html": "^2.14.0",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/svelte": "^5.2.6",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-plugin-svelte": "^2.46.1",
    "jsonlint": "^1.6.3",
    "markdownlint-cli": "^0.43.0",
    "msw": "^2.7.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
    "puppeteer": "^23.11.0",
    "remark-cli": "^12.0.1",
    "remark-lint": "^10.0.0",
    "remark-preset-lint-recommended": "^7.0.0",
    "semver": "^7.6.3",
    "sharp": "^0.33.5",
    "sql-lint": "^1.0.0",
    "svelte-check": "^4.1.1",
    "svglint": "^3.1.0",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
